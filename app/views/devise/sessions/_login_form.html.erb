<%= form_for(@user, as: 'user', url: '/users/sign_in', html: {class: "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Please Sign in</h2>

  <%= f.label :email, class: "sr-only" %>
  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address", required: true %>
  <%= f.label :password, class: "sr-only" %>
  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", required: true %>

  <div class="checkbox">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>

    <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %><br />
    <%= link_to "Forgot your password?", new_password_path(@user) %><br />
    <%#= link_to "Sign up", new_registration_path(@user) %><br />
    
    <div class="form-signin">
      <p>
        New User?
      </p>
      <%= link_to 'Sign up', new_user_registration_path, class: "btn btn-default" %>
    </div>
    
    
<% end %>
